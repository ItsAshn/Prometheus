/**
 * WHAT IS THIS FILE?
 *
 * Globally applied styles. No matter which components are in the page or matching route,
 * the styles in here will be applied to the Document, without any sort of CSS scoping.
 *
 */
:root {
  /* Light theme colors - retro low bitrate palette */
  --primary-purple: #74569b;
  --accent-mint: #96fbc7;
  --bright-lime: #f7ffae;
  --soft-pink: #ffb3cb;
  --lavender: #d8bfd8;

  /* Dark theme colors */
  --dark-primary-purple: #3c2954;
  --dark-accent-mint: #1a4d35;
  --dark-bright-lime: #4a4d1a;
  --dark-soft-pink: #4d1a32;
  --dark-lavender: #3a2d3a;

  /* Current theme variables (default to light) */
  --bg-primary: var(--bright-lime);
  --bg-secondary: var(--lavender);
  --bg-accent: var(--accent-mint);
  --text-primary: var(--primary-purple);
  --text-secondary: var(--primary-purple);
  --accent-color: var(--soft-pink);
  --border-color: var(--primary-purple);

  /* Semantic colors */
  --success-color: var(--accent-mint);
  --warning-color: var(--bright-lime);
  --error-color: var(--soft-pink);

  /* Retro properties */
  --pixel-border: 2px;
  --retro-shadow: 4px 4px 0px;
  --scan-lines: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0, 0, 0, 0.05) 2px,
    rgba(0, 0, 0, 0.05) 4px
  );
}

[data-theme="dark"] {
  --bg-primary: var(--dark-bright-lime);
  --bg-secondary: var(--dark-lavender);
  --bg-accent: var(--dark-accent-mint);
  --text-primary: var(--bright-lime);
  --text-secondary: var(--accent-mint);
  --accent-color: var(--dark-soft-pink);
  --border-color: var(--accent-mint);
}

* {
  box-sizing: border-box;
}

body {
  background-color: var(--bg-primary);
  background-image: var(--scan-lines);
  color: var(--text-primary);
  font-family: "Courier New", Monaco, "Lucida Console", monospace;
  line-height: 1.4;
  margin: 0;
  padding: 0;
  transition: all 0.3s ease;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

/* Retro button styles */
.retro-btn {
  background: var(--accent-color);
  color: var(--text-primary);
  border: var(--pixel-border) solid var(--border-color);
  padding: 8px 16px;
  font-family: inherit;
  font-size: 14px;
  font-weight: bold;
  cursor: pointer;
  box-shadow: var(--retro-shadow) var(--border-color);
  transition: all 0.1s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.retro-btn:hover {
  transform: translate(2px, 2px);
  box-shadow: 2px 2px 0px var(--border-color);
}

.retro-btn:active {
  transform: translate(4px, 4px);
  box-shadow: none;
}

/* Theme Toggle Button */
.theme-toggle {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 1000;
  background: var(--accent-color);
  color: var(--text-primary);
  border: var(--pixel-border) solid var(--border-color);
  padding: 12px;
  font-family: inherit;
  font-size: 16px;
  cursor: pointer;
  box-shadow: var(--retro-shadow) var(--border-color);
  transition: all 0.1s ease;
  border-radius: 0;
}

.theme-toggle:hover {
  transform: translate(2px, 2px);
  box-shadow: 2px 2px 0px var(--border-color);
}

.theme-toggle:active {
  transform: translate(4px, 4px);
  box-shadow: none;
}

