/* Admin Styles */
.admin-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-primary);
  background-image: var(--scan-lines);
  padding: 1rem;
}

.admin-card {
  background: var(--bg-secondary);
  padding: 2rem;
  border: var(--pixel-border) solid var(--border-color);
  box-shadow: var(--retro-shadow) var(--border-color);
  width: 100%;
  max-width: 400px;
}

.admin-login-header {
  text-align: center;
  margin-bottom: 2rem;
}

.admin-login-header h2 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  font-weight: bold;
  text-shadow: 1px 1px 0px var(--border-color);
}

.admin-description {
  color: var(--text-secondary);
  margin: 0;
  font-weight: bold;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: bold;
  color: var(--text-primary);
  text-shadow: 1px 1px 0px var(--border-color);
}

.form-group input {
  width: 100%;
  padding: 0.75rem;
  border: var(--pixel-border) solid var(--border-color);
  font-size: 1rem;
  font-family: inherit;
  background: var(--bg-primary);
  color: var(--text-primary);
  transition: all 0.1s ease;
  box-shadow: inset 2px 2px 0px var(--border-color);
}

.form-group input:focus {
  outline: none;
  box-shadow: inset 4px 4px 0px var(--border-color);
}

.form-group input:disabled {
  background-color: var(--bg-secondary);
  color: var(--text-secondary);
  opacity: 0.7;
}

.submit-btn {
  width: 100%;
  background: var(--accent-color);
  color: var(--text-primary);
  padding: 0.75rem;
  border: var(--pixel-border) solid var(--border-color);
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.1s ease;
  font-family: inherit;
  text-transform: uppercase;
  letter-spacing: 1px;
  box-shadow: var(--retro-shadow) var(--border-color);
}

.submit-btn:hover:not(:disabled) {
  transform: translate(2px, 2px);
  box-shadow: 2px 2px 0px var(--border-color);
}

.submit-btn:active:not(:disabled) {
  transform: translate(4px, 4px);
  box-shadow: none;
}

.submit-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: var(--retro-shadow) var(--border-color);
}

.error-message {
  background: var(--soft-pink);
  color: var(--text-primary);
  padding: 0.75rem;
  border: var(--pixel-border) solid var(--border-color);
  margin-bottom: 1rem;
  font-size: 0.875rem;
  font-weight: bold;
  box-shadow: var(--retro-shadow) var(--border-color);
}

.admin-info {
  margin-top: 2rem;
  text-align: center;
}

.info-text {
  font-size: 0.875rem;
  color: var(--text-secondary);
  margin-bottom: 1rem;
  font-weight: bold;
}

.back-link {
  color: var(--accent-color);
  text-decoration: none;
  font-weight: bold;
  text-shadow: 1px 1px 0px var(--border-color);
}

.back-link:hover {
